@{
  Layout = "_Layout";
}


  @using BakeryTracker.Models;

  <h2>Vendors for Pierre's Bakery</h2>

  @if (@Model.Count == 0)
  {
    <br><p>No vendors have been added to the system yet</p><br>
  }
  @foreach (Vendor vendor in Model)
  {
    <h3><a href="/vendors/@vendor.VendorId">@vendor.Name</a></h3>
  }

  <h5><a href="/vendors/new">Add a new vendor</a></h5>
