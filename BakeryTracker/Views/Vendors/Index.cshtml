<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Vendors</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
  @using BakeryTracker.Models;

  <h1>Vendors for Pierre's Bakery</h1>

  @if (@Model.Count == 0)
  {
    <br><h3>No vendors have been added to the system yet</h3><br>
  }
  @foreach (Vendor vendor in Model)
  {
    <h3><a href="/vendors/@vendor.VendorId">@vendor.Name</a></h3>
  }

  <h5><a href="/vendors/new">Add a vendor</a></h5>

</body>
 
</html>